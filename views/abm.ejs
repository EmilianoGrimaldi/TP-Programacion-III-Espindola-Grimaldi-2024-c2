    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="./css/styles-pantalla-productos.css" />
  </head>
  <body>
    <header>
      <div class="container mt-4" id="contenedor">
        <div class="izquierdaNav">
          <img class="logo" src="./images/4.webp" alt="Logo" />
          <a href="pantalla-productos.html">GAMEREEL</a>
        </div>
        <nav class="nav" id="nav">
          <button class="cerrarMenu" id="cerrar">
            <i class="bi bi-x"></i>
          </button>
          <ul class="nav-links">
            <li><a href="landing-page.html">Inicio</a></li>
            <li><a href="#">Juegos</a></li>
            <li><a href="#">Peliculas</a></li>
          </ul>
        </nav>
        <div class="derechaNav">
          <a href="carrito.html">
            <div class="carrito-container">
              <i class="bi bi-cart4 carrito"></i>
              <span class="numerito">0</span>
            </div>
          </a>
          <div class="iconoModo">
            <i class="bi bi-brightness-high" id="iconoToggler"></i>
          </div>
          <button class="abrirMenu" id="abrir">
            <i class="bi bi-list"></i>
          </button>
        </div>
      </div>
    </header>
    <section class="container" id="">
      <div class="row mt-3">
        <div id="contenedorProductos" class="col-12">
          <div class="container">
            <div class="row d-flex justify-content-evenly">
              <div
                class="col-12 col-sm-6 col-md-4 col-lg-2 d-flex flex-column align-items-center mt-4 mb-4 contenedorJuegos"
              >
                <i
                  id="icon"
                  class="bi-plus-circle"
                  style="font-size: 200px"
                ></i>
              </div>
              <% productos.forEach(p => { %>
              <div
                class="col-12 col-sm-6 col-md-4 col-lg-2 d-flex flex-column align-items-center mt-4 contenedorJuegos"
              >
                <div class="row">
                  <div
                    class="d-flex justify-content-center align-content-center"
                  >
                    <p class="p-0 m-0"><%=p.nombre %></p>
                  </div>
                  <div class="d-flex justify-content-center mt-3">
                    <img src="./uploads/<%=p.portada %>" alt="" />
                  </div>
                  <div class="d-flex justify-content-center mt-1">
                    <p class="mb-0">$ <%=p.precio %></p>
                  </div>
                  <div class="d-flex justify-content-center mt-1 gap-2">
                    <button
                      id="<%=p.id %>"
                      class="btn btn-primary btnEditar"
                      type="button"
                    >
                      <i class="bi bi-pencil me-2"></i>Editar
                    </button>
                    <button
                      id="<%=p.id %>"
                      class="btn btn-primary btnEliminar"
                      type="button"
                    >
                      <i class="bi bi-trash me-2"></i>Eliminar
                    </button>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
